<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FormCommonStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="EditTextStyle" parent="FormCommonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="TextViewCommonStyle" parent="FormCommonStyle">

    </style>

    <style name="NameEditTextStyle" parent="EditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="emailInputStyle" parent="NameEditTextStyle">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="phoneInputStyle" parent="NameEditTextStyle">
        <item name="android:inputType">phone</item>
    </style>

    <style name="companyNameStyle" parent="NameEditTextStyle">
        <item name="android:imeOptions">actionDone</item>
    </style>

</resources>
